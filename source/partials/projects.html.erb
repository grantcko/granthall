<div class="container pt-5">
  <div id="projects" class="row">
    <div class="col-md-6">
      <div class="cards">
        <p class="pt-2 text-center"><b>VIDEOS</b></p>
        <% videos = fetch_vimeo_videos %>
        <% if videos['data'].any? %>
          <% videos['data'].each do |video| %>
            <a href="<%= video['link'] %>" class="text-decoration-none" target="_blank">
              <div class="card-product">
                <img loading="lazy"
                     src="<%= video['pictures']['sizes'].last['link'] %>"
                     alt="<%= video['name'] %>"
                     width="120"
                     height="120">
                <div class="card-product-infos w-100">
                  <div class="d-flex justify-content-between align-items-center">
                    <h2><%= video['name'] %></h2>
                    <i class="fas fa-external-link-alt"></i>
                  </div>
                  <p><%= truncate_words(video['description']) %></p>
                </div>
              </div>
            </a>
          <% end %>
        <% else %>
          <p class="text-center">Videos coming soon...</p>
        <% end %>
      </div>
    </div>
    <!-- Code Section -->
    <div class="col-md-6">
      <div class="cards">
        <p class="pt-2 text-center"><b>CODE</b></p>
        <% fetch_github_pinned_repos.each do |project| %>
          <a href="<%= project[:url] %>" class="text-decoration-none" target="_blank">
            <div class="card-product">
              <img loading="lazy"
                   src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png"
                   alt="GitHub Logo"
                   width="120"
                   height="120">
              <div class="card-product-infos w-100">
                <div class="d-flex justify-content-between align-items-center">
                  <h2><%= project[:name] %></h2>
                  <i class="fas fa-external-link-alt"></i>
                </div>
                <p><%= truncate_words(project[:description]) %></p>
                <p>
                  <small>
                    <% if project[:language] %>
                      <span class="mr-3"><i class="fas fa-code"></i> <%= project[:language] %></span>
                    <% end %>
                    <span><i class="fas fa-star"></i> <%= project[:stars] %></span>
                  </small>
                </p>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
