<section class="github-projects">
  <div class="row justify-content-center">
    <div class="row g-3">
      <p class="text-center" id="code-title">REPOS</p>
      <% fetch_github_pinned_repos.each do |project| %>
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <p class="card-title mb-0"><%= project[:name] %></p>
            </div>
            <p class="card-text small"><%= project[:description] %></p>
            <a href="<%= project[:url] %>" class="stretched-link" target="_blank"></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
